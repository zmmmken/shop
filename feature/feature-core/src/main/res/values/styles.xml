<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="fontFamily">@font/shabnam</item>
    </style>

    <style name="TextStyle.firstHeadline">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">32sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextStyle.secondHeadline">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="TextStyle.appBar">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.caption">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">@font/shabnam_bold</item>
    </style>

    <style name="TextStyle.firstSubtitle">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20sp</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">@font/shabnam_bold</item>
    </style>
    <style name="TextStyle.secondSubtitle">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20sp</item>
    </style>

</resources>